{
  "manifest_version": 3,
  "name": "Veeva Approved Email Previewer Extension",
  "version": "0.0.1",
  "description": "Browser extension that allows you to preview Veeva approved emails locally.",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "file:///*.html",
    "file:///*/*.html"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": "icon32.png"
  },
  "content_scripts": [
    {
      "matches": ["file:///*.html"],
      "css": ["content.css"],
      "js": [
        "js/tokens/content.js",
        "js/tokens/fragment.js",
        "js/tokens/user-input.js",
        "js/tokens/tokens.js",
        "js/content.js"
      ]
    }
  ]  
}